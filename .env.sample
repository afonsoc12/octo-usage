# Octopus
OCTOPUS_API_KEY=
OCTOPUS_ELECTRICITY_MPAN=
OCTOPUS_ELECTRICITY_SN=

# PostgreSQL Connection
# Option 1: Use DATABASE_URL connection string (takes precedence)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Option 2: Use individual variables (used if DATABASE_URL not set)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=octopus
POSTGRES_PASSWORD=octopus
POSTGRES_DB=octopus_energy

# Logging Configuration
# LOG_LEVEL: DEBUG, INFO (default), WARNING, ERROR
LOG_LEVEL=INFO

# LOG_FORMAT: text (default, human-readable) or logfmt (structured logging)
# logfmt is recommended for Docker/production environments
LOG_FORMAT=text
